@using SACLA_App.ViewModels
@model PaperViewModel

@{
    ViewData["Title"] = "Create Paper";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-8 mx-auto">
        <h2>Create Paper</h2>
        <hr />
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mb-3">
                <label asp-for="@Model.Paper.Title" class="control-label"></label>
                <input asp-for="@Model.Paper.Title" class="form-control" />
                <span asp-validation-for="@Model.Paper.Title" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="@Model.Paper.Abstract" class="control-label"></label>
                <textarea asp-for="@Model.Paper.Abstract" class="form-control" style="height: 10rem;"></textarea>
                <span asp-validation-for="@Model.Paper.Abstract" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="@Model.Topic.Id" class="control-label">Topic</label>
                <select asp-for="@Model.Topic.Id" class="form-select" aria-label="Default select example" asp-items="@ViewBag.TopicId"></select>
                <span asp-validation-for="Topic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input class="btn btn-primary" type="submit" value="Create" />
                <a class="btn btn-outline-primary mx-2" asp-action="Author">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
